{
    "version": "0.8.88",
    "description": "Yet another clash gui.",
    "homepage": "https://github.com/chen08209/FlClash",
    "license": "Apache-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/chen08209/FlClash/releases/download/v0.8.88/FlClash-0.8.88-windows-amd64-setup.exe",
            "hash": "f209668441460dcd3821b23f672003e600c1c52c3a7ea580765bcc0375720329"
        }
    },
    "installer": {
        "script": [
            "$processOptions = @{",
            "    FilePath     = \"$dir\\$fname\"",
            "    ArgumentList = @('/S', \"/D=`\"$dir`\"\")",
            "    Wait         = $true",
            "    PassThru     = $true",
            "    Verb         = 'RunAs'",
            "}",
            "$process = Start-Process @processOptions",
            "if ($process.ExitCode -ne 0) {",
            "    error \"Installer exited with code: $($process.ExitCode)\"",
            "    exit 1",
            "}"
        ]
    },
    "bin": "FlClash.exe",
    "shortcuts": [
        [
            "FlClash.exe",
            "FlClash"
        ]
    ],
    "checkver": {
        "github": "https://github.com/chen08209/FlClash"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/chen08209/FlClash/releases/download/v$version/FlClash-$version-windows-amd64-setup.exe"
            }
        }
    }
}
